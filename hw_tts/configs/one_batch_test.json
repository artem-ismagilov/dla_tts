{
  "name": "one_batch_test",
  "n_gpu": 1,
  "arch": {
    "type": "FastSpeech",
    "args": {
    }
  },
  "dataset": {
    "type": "LJSpeechDataset",
    "args": {
    }
  },
  "dataloader": {
    "type": "LJSpeechDataLoader",
    "args": {
      "batch_size": 16,
      "batch_expand_size": 32,
      "num_workers": 1
    }
  },
  "loss": {
    "type": "FastSpeechLoss",
    "args": {
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 1e-2
    }
  },
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 1e-2,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "dla_tts",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
