{
  "name": "fast_speech_2_test",
  "n_gpu": 1,
  "arch": {
    "type": "FastSpeech2",
    "args": {
    }
  },
  "dataset": {
    "type": "LJSpeechDataset",
    "args": {
    }
  },
  "dataloader": {
    "type": "LJSpeechDataLoader",
    "args": {
      "batch_size": 16,
      "batch_expand_size": 1,
      "num_workers": 6
    }
  },
  "loss": {
    "type": "FastSpeechLoss",
    "args": {
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 1e-3,
      "betas": [0.9, 0.98],
      "eps": 1e-9,
      "weight_decay": 0
    }
  },
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 500,
      "epochs": 100,
      "anneal_strategy": "cos",
      "max_lr": 1e-3,
      "pct_start": 0.1
    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "dla_tts",
    "len_epoch": 16,
    "grad_norm_clip": 10
  }
}
